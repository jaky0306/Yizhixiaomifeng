<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@color/background_4">
    
    <RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <ImageView
            android:id="@+id/register_back"
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_width="30dip"
	        android:layout_height="30dip"
	        android:src="@drawable/left_icon_small"/>
       <TextView
	        android:layout_centerInParent="true"
	        android:layout_toRightOf="@id/register_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="注册"/>

	</RelativeLayout>
   		<!--姓名 -->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="姓名"/>
    <Spinner 
        android:id="@+id/register_userid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/edittext_bg"
        />
    <!--电话 -->
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="电话"
        />
    <EditText 
        android:id="@+id/register_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入电话号码，将用作登录账号"
        android:singleLine="true"
        android:inputType="phone"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        />
    <!--密码 -->
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="密码"
        />
    <EditText 
        android:id="@+id/register_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:hint="不少于6个字符，需组合字母、数字或符号"
        android:singleLine="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:inputType="textPassword"
        />
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:text="确认密码"
        />
    <EditText 
        android:id="@+id/register_confirmPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:hint="请再次输入密码"
        android:singleLine="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@drawable/edittext_bg"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/commit_registet_button"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_margin="5dip"
        android:background="@drawable/rectangle_bg_2"
        android:text="注册"
        android:textColor="@color/white" />
	
</LinearLayout>
