<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <ImageView
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_width="45px"
	        android:layout_height="45px"
	        android:id="@+id/show_all_published_news_to_user_back"
	        android:src="@drawable/left_icon_small"/>
       <TextView
	        android:layout_centerInParent="true"
	        android:layout_toRightOf="@id/show_all_published_news_to_user_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="消息列表"/>

	</RelativeLayout>
    
    
    <com.yizhixiaomifeng.opensource.autoListview.AutoListView 
        android:id="@+id/show_all_published_news_to_user_Listview"
        android:layout_marginTop="5dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
    </com.yizhixiaomifeng.opensource.autoListview.AutoListView>
    

</LinearLayout>
