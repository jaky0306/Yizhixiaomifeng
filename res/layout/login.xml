<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/background_1">

   	<RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <ImageView
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_width="45px"
	        android:layout_height="45px"
	        android:id="@+id/back"
	        android:src="@drawable/left_icon_small"/>
       <TextView
	        android:layout_centerInParent="true"
	        android:layout_toRightOf="@id/back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="登录"/>

	</RelativeLayout>
    
    
    <RelativeLayout 
        android:id="@+id/login_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_register_background"
        android:layout_marginTop="50dp"
        >
        <!--电话 -->
        <TextView 
            android:id="@+id/usernameInfo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="电话"
            />
        <EditText 
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:hint="请输入电话号码"
            android:layout_below="@id/usernameInfo"
            android:singleLine="true"
            android:inputType="text"
            android:background="@drawable/edittext_bg"
            android:text="1"
            />
        <!--密码 -->
        <TextView 
            android:id="@+id/passwordInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:text="密码"
            />
        <EditText 
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordInfo"
            android:password="true"
            android:hint="密码不能为空"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:singleLine="true"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:text="1"
            />
        
        <RadioGroup 
            android:id="@+id/login_type"
            android:layout_below="@id/password"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <RadioButton 
                android:layout_height="wrap_content"
                android:text="员工"
                android:layout_width="wrap_content"
                android:checked="true"
                android:id="@+id/login_type_user"
                />
            <RadioButton 
                android:layout_height="wrap_content"
                android:text="管理员"
                android:layout_width="wrap_content"
                android:id="@+id/login_type_admin"
                />
    </RadioGroup>
        
        
        <Button
            android:id="@+id/loginIn"
            android:layout_width="100dip"
            android:layout_height="50dip"
            android:textColor="@color/white"
            android:text="登录"
            android:textSize="18sp"
            android:layout_below="@id/password"
            android:layout_alignRight="@id/password"
            android:background="@drawable/rectangle_bg_2"
            />
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
	    >
	    <TextView  
	     android:id="@+id/register"
         android:text="没有账号? 注册"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="3dp"
         android:layout_marginTop="5dp"
         android:autoLink="all"
         android:textColor="@color/white"
         android:textSize="20sp"
         android:textColorLink="#FF0066CC" />
	</RelativeLayout>
</LinearLayout>
