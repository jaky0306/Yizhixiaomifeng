<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_3"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        
        <ImageView
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_width="45px"
	        android:layout_height="45px"
	        android:id="@+id/show_fail_attendance_back"
	        android:src="@drawable/left_icon_small"/>
       <TextView
	        android:layout_toRightOf="@id/show_fail_attendance_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:textSize="20sp"
	        android:text="问题现场"/>
       
       <Button android:id="@+id/show_fail_attendance_phone"
           android:layout_width="100dip"
           android:layout_height="40dip"
           android:drawableLeft="@drawable/time_icon"
           android:background="@drawable/rectangle_bg_3"
           android:layout_alignParentRight="true"/>

	</RelativeLayout>
    
    <LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dip"
	    android:layout_marginTop="10dip"
	    android:layout_gravity="fill_vertical"
	    android:orientation="vertical">
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="15sp"
	        android:layout_gravity="center_vertical"
	        android:text="签到现场"/>
	    <ImageView 
	        android:id="@+id/showfailattendance_check_in_scene"
	        android:layout_width="180dip"
	        android:layout_height="140dip"
	        android:layout_gravity="center"
	        android:background="@drawable/rectangle_bg_2"
	        android:scaleType="fitXY"
	        android:src="@drawable/none_photo"/>
		</LinearLayout>
		<View  
   			android:layout_width="fill_parent"  
    		android:layout_height="5px"
    		android:layout_margin="5dip"
   			android:background="@color/background_5" 
		/> 
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dip"
		    android:layout_marginTop="10dip"
		    android:layout_gravity="fill_vertical"
		    android:orientation="vertical">
		    
		    <TextView 
		        android:layout_width="100dip"
		        android:layout_height="wrap_content"
		        android:textSize="15sp"
		        android:text="签到签退录音"/>
		    
				<LinearLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="10dip"
				    android:orientation="vertical">
				    <ImageView
					    android:id="@+id/show_catching_voice_imageview"
					    android:layout_width="40dip"
					    android:layout_height="40dip"
					    android:src="@drawable/playing_voice"
					    android:layout_gravity="center"
					    android:visibility="visible" />
				    
				    <Button 
				        android:id="@+id/showfailattendance_checkin_voice_button"
				        android:layout_width="wrap_content"
				        android:layout_height="50dip"
				        android:layout_gravity="center"
				        android:layout_marginTop="5dip"
				        android:text="播放签到录音"
				        android:background="@drawable/rectangle_bg_5"
				        android:drawableLeft="@drawable/catch_voice"
				        />
				    <Button 
				        android:id="@+id/showfailattendance_checkout_voice_button"
				        android:layout_width="wrap_content"
				        android:layout_height="50dip"
				        android:layout_marginTop="10dip"
				        android:layout_gravity="center"
				        android:text="播放签退录音"
				        android:background="@drawable/rectangle_bg_5"
				        android:drawableLeft="@drawable/show_voice"/>
				    
				</LinearLayout>

				

			</LinearLayout>
    
</LinearLayout>
