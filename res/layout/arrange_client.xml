<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/background_4" >

        <ImageView
	        android:layout_centerInParent="true"
	        android:layout_alignParentLeft="true"
	        android:layout_width="45px"
	        android:layout_height="45px"
	        android:id="@+id/arrange_client_back"
	        android:src="@drawable/left_icon_small"/>
       <TextView
	        android:layout_centerInParent="true"
	        android:layout_toRightOf="@id/arrange_client_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="20sp"
	        android:text="安排员工"/>
        
        <Button
            android:id="@+id/commit_arrange_button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:background="@drawable/rectangle_bg_2"
            android:text="安排" />
    </RelativeLayout>
    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/background_2"
	    android:orientation="vertical" >
    
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:layout_gravity="fill_vertical"
			    android:orientation="vertical">
			    
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="15sp"
			        android:text="客户名称"/>
			    <TextView 
			        android:id="@+id/arrange_client_name"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="@color/white"
			        android:singleLine="false"
			        android:layout_marginLeft="5dip"
			        android:text="客户名称"/>
			</LinearLayout>
		    <LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:layout_gravity="fill_vertical"
			    android:orientation="vertical">
			    
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="15sp"
			        android:text="合作项目"/>
			    <TextView 
			        android:id="@+id/arrange_client_content"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="@color/white"
			        android:singleLine="false"
			        android:layout_marginLeft="5dip"
			        android:text="项目合作"/>
			</LinearLayout>
			<LinearLayout 
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5dip"
			    android:layout_marginTop="10dip"
			    android:layout_gravity="fill_vertical"
			    android:orientation="vertical">
			    
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="15sp"
			        android:text="公司地址"/>
			    <TextView 
			        android:id="@+id/arrange_client_address"
			        android:layout_width="fill_parent"
			        android:layout_height="50dip"
			        android:gravity="center_vertical"
			        android:textSize="18sp"
			        android:textColor="@color/white"
			        android:singleLine="false"
			        android:layout_marginLeft="5dip"
			        android:text="公司地址"/>
			</LinearLayout>
		
			<TextView 
			    android:id="@+id/show_be_arranged_staff_textview"
			    android:layout_marginTop="10dip"
			    android:layout_width="fill_parent"
			    android:layout_height="100dip"/>
			<Button 
			    android:id="@+id/select_staff_for_client_button"
			    android:layout_width="fill_parent"
			    android:layout_height="50dip"
			    android:layout_margin="5dip"
			    android:background="@drawable/rectangle_bg_3"
			    android:text="选择员工"/>
		</LinearLayout>
        
        
    </ScrollView>
    
</LinearLayout>